<?xml version="1.0" encoding="UTF-8"?>
		
		
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
version="2.0">
		
   <persistence-unit name="de.shop.PU">
      <!-- If you are running in a production environment, add a managed 
         data source, the example data source is just for development and testing! -->
      <jta-data-source>java:jboss/datasources/ShopDS</jta-data-source>
	  <validation-mode>NONE</validation-mode>
      <properties>
         <!-- Properties for Hibernate -->
		 <property name="hibernate.id.new_generator_mappings" value="true"/> 
		 <property name="hibernate.query.jpaql_strict_compliance" value="true"/>
		 <property name="hibernate.format_sql" value="true"/>
		 <property name="hibernate.use_sql_comments" value="true"/>
		 
		 <property name="hibernate.jdbc.batch_versioned_data" value="true"/>
		 <property name="hibernate.cache.use_second_level_cache" value="true"/>
		 <property name="hibernate.cache.use_query_cache" value="true"/>
		 <property name="hibernate.cache.use_reference_entries" value="true"/>
		 
         <property name="hibernate.hbm2ddl.auto" value="create-drop" />
        <!-- <property name="hibernate.show_sql" value="false" /> -->
	   	 <property name="hibernate.hbm2ddl.import_files"
		 value="sql/10_kunde.sql,sql/20_adresse.sql,sql/30_artikel.sql,sql/40_bestellung.sql,sql/50_bestellposition.sql"/>	
		
      </properties>
   </persistence-unit>
</persistence>